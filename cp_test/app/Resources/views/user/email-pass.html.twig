<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>{{ '找回密码' | ctrans }}</title>
    <link rel="stylesheet" href="{{ asset('public/css/common.css') }}">
    <link rel="stylesheet" href="{{ asset('public/ccount/css/layer.css') }}">
    <script src="{{ asset('public/ccount/js/jquery-1.11.1.min.js') }}"></script>
    <script src="{{ asset('public/ccount/js/layer.js') }}"></script>
</head>

<body>

{% if  data.EmailVerify.code == false %}

<div style="height: 100px;width: 600px;margin: 300px  auto;text-align: center;  font-size: 25px;" class="thead ">
    <span style="color: #0a628f;">  {{ data.EmailVerify.msg }}  </span>
</div>


{% else %}

<div class="login">


        <div class="topbar2">
            {#<a href="#" class="logo"><img src="{{ asset('public/images/logo.png') }}" alt=""></a>#}
            {#<a href="/" class="home"><img src="{{ asset('public/images/home.gif') }}" alt=""></a>#}
            {{ '找回密码' | ctrans }}
        </div>
        <form class="am-form" method="get" action="{{ asset('/user/email/update/pass') }}"  onsubmit="EmailUpdatePass(this);return false">
            <table class="from-login" cellspacing="0" cellpadding="0">

                <tr>
                    <td>{{ '电子邮箱' | ctrans }}</td><td>
                        <div class="username">
                            <input id="username" name="email" type="text" value="{{ data.email }}" readOnly="true" >
                            <input id="username" name="time" type="hidden" value="{{ data.time }}" readOnly="true" >
                            <i></i>
                        </div>
                    </td>

                </tr>
                <tr>
                    <td>{{ '新密码' | ctrans }}</td><td>
                        <div class="username">
                            <input id="username" name="password" type="password" placeholder=" {{ '请输入新密码' | ctrans }}">
                            <i></i>
                        </div>
                    </td>

                </tr>

                <tr>
                    <td>{{ '确认密码' | ctrans }}</td><td>
                        <div class="username">
                            <input id="username" name="repassword" type="password" placeholder="{{ '请输入新密码' | ctrans }}">
                            <i></i>
                        </div>
                    </td>

                </tr>


                <tr>
                    <td>{{ '验证码' | ctrans }}</td>
                    <td>
                        <div class="yzm">
                            <input type="text" name="captcha" class="" id="doc-ipt-captcha-1" placeholder="{{ '请输入验证码' | ctrans }}" >
                        </div>
                    </td>
                    <td>
                        <div class="img">
                            <img id="yzm" height="43" src="{{ asset('/captcha/getCaptcha') }}" onclick="this.src='/captcha/getCaptcha?cc='+Math.random();" >
                        </div>
                        {% if msg is defined  %}
                            <div class="am-form-group login-font">
                                <i> {{ msg }}</i>
                            </div>
                        {% endif %}
                    </td>
                </tr>
                <input type="hidden" name="format" value="html" />
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <button class="btn-login" type="submit">{{ '找回密码' | ctrans }}</button>
                    </td>
                </tr>

            </table>
        </form>



</div>
{%endif%}
</body>


<script>

    function EmailUpdatePass(m) {

        $.ajax({

            url:$(m).attr("action") ,
            type:$(m).attr("method"),
            dataType:"json",
            data:$(m).serialize(),
            success: function(obj){

                if(obj.code==false){
                    layer.alert(obj.msg,{title:'{{ '信息' | ctrans }}',btn: ["{{ '确定' | ctrans }}"]})
                }else {
                    layer.alert('{{ "修改密码成功请登录" |  ctrans}}',{
                        title:'{{ '信息' | ctrans }}',
                        btn: ["{{ '确定' | ctrans }}"],
                        yes:function () {
                            parent.layer.closeAll();
                            window.location.href='/';
                        }
                    })

                }
            },
            error:function () {
                layer.alert("网络错误",{ title:'{{ '信息' | ctrans }}',btn: ["{{ '确定' | ctrans }}"]})
            }

        });


    }


</script>



</html>
