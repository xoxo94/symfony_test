                                    <div class="type fl">
                                        <div class="cc">
                                            <p>{{ '交易账户' | ctrans }}</p>
                                            <i>{{j.login ?: ''}}</i>
                                        </div>
                                    </div>
                                    <div class="fl tinfo">

                                        <p><i id="i">{{ '账户余额：' | ctrans }}</i><span class="balance uklogins" data="{{ j.uklogin }}">${{j.balance ?: ''}}</span></p>
