                                    <div class="type fl none">
                                        <div class="cc">
                                            <p style="padding-top:49px">{{ '没有交易账户' | ctrans }}</p>
                                        </div>
                                    </div>
                                    <div class="fl tinfo" style="line-height: 124px;font-size: 24px;">
                                        <a href="javascript:accounts.trad.add();" style="color:#0085ff;">{{ '点击这里' | ctrans }}</a>{{ '新增账户' | ctrans }}
                                    </div>
                                </dd>
                            {% endif %}
                        </dl>
                    </div>
                    <div class="tab" style="display: none;">
                        <dl>
                            <dt class="of"><span class="fl">{{ '投资账户' | ctrans }}</span> <i  class="fr add" onclick="accounts.wiht.add(this);" data-text={{ '"投资账户"' | ctrans }}>{{ '+ 新增' | ctrans }}</i></dt>
                            {% for t in data.withlist %}
                                <dd>
                                    <div class="type fl" style="margin-top: 55px;">
                                        <div class="cc">
                                            <p>{{ '投资账户' | ctrans }}</p>
                                            <i>{{t.login ?: ''}}</i>
                                        </div>
                                    </div>
                                    <div class="fl tinfo">
                                        <p><i style="color: #0185ff;">{{ '账户余额：' | ctrans }}</i><span class="balance uklogins" data="{{ j.uklogin }}">${{t.balance ?: ''}}</span></p>
                                        <p><i>{{ '服务器：' | ctrans }}</i>{{t.mt4group ?: ''}}</p>
                                        <p><i>{{ '所跟基金账户：' | ctrans }}</i>{{t.ukflogin ?: ''}}</p>
                                        <p><i>{{ '杠杆比例：' | ctrans }}</i>{{t.leverage ?: ''}}</p>
                                        <p><i>{{ '建立时间：' | ctrans }}</i>{{t.addtime ?: ''}}</p>
                                        <p class="investset"><i onclick="accounts.wiht.update(this)" data='[{{t.login}},"{{ t.uklogin }}","{{ t.flogin }}"]' class="setting" data-text={{ '"设置"' | ctrans }}>{{ '设置' | ctrans }}</i></p>
                                    </div>
                                </dd>
                            {% endfor %}

                            {% if  data.withlist==[] %}
                                <dd>
                                    <div class="type fl">
                                        <div class="cc">
                                            <p style="padding-top:49px">{{ '没有投资账户' | ctrans }}</p>
                                        </div>
                                    </div>
                                    <div class="fl tinfo" style="line-height: 124px;font-size: 24px;">
                                        <a href="javascript:accounts.wiht.add(this);" style="color:#0085ff;">{{ '点击这里' | ctrans }}</a>{{ '新增账户' | ctrans }}
                                    </div>
                                </dd>
                            {% endif %}

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
