{% extends 'user/userconsole.html.twig' %}
{% block content %}
    <script type="text/javascript" src="{{ asset('/js/user/account/account.js') }}"></script>
<div class="right-box">
    <div class="link">
        <div class="fl">
            {% if data.tradlist!=[] %}
                <a href="javascript:void(0);" class="on">{{ '交易账户' | ctrans }}</a>
                <a href="javascript:void(0);" >{{ '内部转账' | ctrans }}</a>
            {% endif %}
            <a href="javascript:void(0);">{{ '账单记录' | ctrans }}</a>
            {#{% if data.WEB.cash_wallet_enable=='1' %}#}
            {#<a href="javascript:void(0);" id="motion">{{ '余额自动转入' | ctrans }}</a>#}
            {#{% endif %}#}
        </div>
        <div class="fr">
            {% autoescape false %}
            {% if balanceOrComlist.Comlist !=""  %}
                <p>{{ '佣金账户：' | ctrans }}<span>{{ balanceOrComlist.Comlist }}</span></p>
            {% endif %}
            <p>{{ '交易余额：' | ctrans }}<span>{{ balanceOrComlist.balance }}</span></p>
            {% endautoescape %}
            {#{% if data.WEB.cash_wallet_enable=='1' %}#}
            {#<p>{{ '账户余额：' | ctrans }}<span>{{ balance }}</span></p>#}
            {#<p>{{ '资金总量：' | ctrans }}<span>{{ sumBalance }}</span></p>#}
            {#{% endif %}#}
        </div>
    </div>
    {% if data.tradlist!=[] %}
        {#但是没有交易账户  不输出交易账户选项卡 有则输出 #}
        <div class="main-cont">
            <div class="tabs">
                <ul style="display: none">
                    <li class="on">{{ '基金账户' | ctrans }}</li>
                    <li>{{ '交易账户' | ctrans }}</li>
                    <li>{{ '投资账户' | ctrans }}</li>
                </ul>
                <div class="cont">
                    <div class="tab" style="display: none">
                        <dl>
                            <dt class="of"><span class="fl">{{ '基金账户' | ctrans }}</span> <i class="fr add" onclick="accounts.fund.add()" data-text="基金账户">{{ '+ 新增' | ctrans }}</i></dt>

                            {% for funds in data.fundlist %}
                                <dd class="fund">
                                    <div class='b type fl'>
                                        <div class='cc'>
                                            <p>{{ '基金账户' | ctrans }}</p>
                                            <i>{{funds.login ?: ''}}</i>
                                        </div>
                                    </div>
                                    <div class='fl tinfo'>
                                        <p><i>{{ '社区昵称：' | ctrans }}</i>{{funds.nickname ?: ''}}</p>
                                        <p><i>{{ '服务器：' | ctrans }}</i>{{funds.mt4group ?: '' }}</p>
                                        <p><i>{{ '提成比例：' | ctrans }}</i>{{funds.rebate ?: '' }}%</p>
                                        <p><i>{{ '杠杆比例：' | ctrans }}</i>{{funds.leverage ?: '' }}</p>
                                        <p><i>{{ '建立时间：' | ctrans }}</i>{{funds.addtime ?: '' }}</p>
                                        <p><i style="color: #0185ff;">{{ '账户余额：' | ctrans }}</i>
                                            <span><span class="uklogins" data="{{ funds.uklogin }}">${{funds.balance ?: '' }}</span>  {{ '利润池' | ctrans }}({{ funds.seize }})
                                        <img src="{{ asset('http://images.gsdo.com/gsdo/images/flash.png') }}"  style="height: 14px;vertical-align: baseline;" onclick="accounts.fund.profitOutShow('{{ funds.uklogin }}')" class="profitout">
                                    </span>
                                        </p>
                                        <p><i>{{ '投资账户：' | ctrans }}</i>
                                            <span>{% for item in funds.subwiths %}{{ item.login }}({{ '余额:' | ctrans }}${{ item.balance }}){% endfor %}
                                    </span></p>
                                        <p><i>{{ '受理新的投资：' | ctrans }}</i><span>{{funds.isnewWithStr ?: '' }}</span></p>
                                        <p><i>{{ '历史投资：' | ctrans }}</i>{{funds.showHistoryStr ?: '' }}</p>
                                        <p><i>{{ '当前投资：' | ctrans }}</i>{{funds.showCurrentStr ?: '' }}</p>
                                        <p class="setbutton"><i onclick="accounts.fund.update(this);" class="mt4no" data='["{{ funds.uklogin }}",{{ funds.login }},"{{ funds.nickname }}",{{ funds.rebate }},{{ funds.isnewWith }},{{ funds.showHistory }},{{ funds.showCurrent }},{{ funds.autoSeize }}]'>{{ '账户设置' | ctrans }}</i></p>
                                    </div>
                                </dd>
                            {% endfor %}

                            {% if  data.fundlist==[] %}
                                <dd>
                                    <div class="type fl">
                                        <div class="cc">
                                            <p style="padding-top:49px">{{ '没有基金账户' | ctrans }}</p>
                                        </div>
                                    </div>
                                    <div class="fl tinfo" style="line-height: 124px;font-size: 24px;">
                                        <a href="javascript:accounts.fund.add();" style="color:#0085ff;">{{ '点击这里' | ctrans }}</a>{{ '新增账户' | ctrans }}
                                    </div>
                                </dd>
                            {% endif %}

                        </dl>
                    </div>
                    <div class="tab">
                        <dl>
                            <dt class="of"><span class="fl">{{ '交易账户' | ctrans }}</span> <i class="fr add" onclick="accounts.trad.add();" data-text={{ '"交易账户"' | ctrans }}>{{ '+ 新增' | ctrans }}</i></dt>
                            {% for j in data.tradlist %}
